# =============================================================================
# Enhanced Combined Database Watcher Configuration
# =============================================================================

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
MONGO_URI=mongodb://localhost:27017/?directConnection=true&serverSelectionTimeoutMS=2000&appName=mongosh+2.1.4
MONGO_DB_NAME=ensogove

# MongoDB Collection Configurations (JSON format)
# Format: [{"collection_name": "name", "timestamp_field": "field", "company_id_field": "field", "site_code_field": "field"}]
MONGO_COLLECTIONS=[{"collection_name": "company_goals", "timestamp_field": "updatedAt", "company_id_field": "company_id", "site_code_field": "site_code"}]

# =============================================================================
# SQL DATABASE CONFIGURATION
# =============================================================================
SQL_HOST=127.0.0.1
SQL_PORT=3306
SQL_USER=root
SQL_PASSWORD=
SQL_DATABASE=ensogove

# SQL Table Configurations (JSON format)
# Format: [{"table_name": "name", "timestamp_field": "field", "id_field": "field", "company_id_field": "field", "site_code_field": "field"}]
SQL_TABLES=[{"table_name": "companies", "timestamp_field": "updated_at", "id_field": "id", "company_id_field": "id", "site_code_field": null}]

# =============================================================================
# WATCHER CONFIGURATION
# =============================================================================

# Enable/disable watchers (true/false)
MONGO_ENABLED=true
SQL_ENABLED=true

# Polling interval in seconds
POLL_INTERVAL=30

# Batch size for processing changes
BATCH_SIZE=1000

# =============================================================================
# QUEUE CREATION CONFIGURATION
# =============================================================================
QUEUE_CREATION_ENABLED=true

# MongoDB collection name for badge evaluation queue
BADGE_COLLECTION_NAME=badge_evaluation_queue

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable file logging (true/false)
LOG_TO_FILE=false

# Log file path (only used if LOG_TO_FILE=true)
LOG_FILE_PATH=./logs/watcher.log

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Status report interval in seconds
STATUS_REPORT_INTERVAL=300

# Maximum number of retries for failed operations
MAX_RETRIES=3

# Connection timeout in seconds
CONNECTION_TIMEOUT=30